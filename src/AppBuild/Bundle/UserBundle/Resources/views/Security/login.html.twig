{% extends 'AppBuildUserBundle::layout.html.twig' %}

{% block title 'user.login.title'|trans %}

{% block content %}

    <div class="row text-center">
        <h2>{{ 'user.login.title' | trans }}</h2>
    </div>

    {% if error %}
    <div class="row text-center">
        <div class="alert alert-danger">{{ error.message }}</div>
    </div>
    {% endif %}

    <div class="row text-center margin-bottom-15">
        <form action="{{ path('appbuild_user_login_check') }}" method="post" class="center-block">
            <div class="form-group">
                <label for="username">{{ 'user.login.form.email.label' | trans }}</label>
                <input type="text" id="username" name="_username" class="form-control" value="{{ last_username }}" />
            </div>

            <div class="form-group">
                <label for="password">{{ 'user.login.form.password.label' | trans }}</label>
                <input type="password" id="password" name="_password" class="form-control"/>
            </div>

            <button type="submit" class="btn btn-default">{{ 'user.login.form.submit' | trans }}</button>
        </form>
    </div>

    <div class="row text-center">
        <a href="{{ url('appbuild_user_register') }}" class="btn btn-info">{{ 'user.register.title' | trans }}</a>
    </div>

{% endblock %}
