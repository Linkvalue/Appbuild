<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Application Form Type -->
        <service id="appbuild.application.application.form_type"
            class="AppBuild\Bundle\ApplicationBundle\Form\Type\ApplicationType"
            public="true"
        >
            <tag name="form.type" alias="appbuild_application" />
            <argument type="service" id="translator" />
        </service>

        <!-- Build Form Type -->
        <service id="appbuild.application.build.form_type"
            class="AppBuild\Bundle\ApplicationBundle\Form\Type\BuildType"
            public="true"
        >
            <argument>%build_application_dir%</argument>
            <tag name="form.type" alias="appbuild_build" />
        </service>
    </services>

</container>
