<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="build.application.form_type"
            class="AppBundle\Form\Type\ApplicationType"
            public="true"
        >
            <argument>%build_application_dir%</argument>
            <tag name="form.type" alias="application" />
        </service>

        <service id="file_helper"
            class="AppBundle\Service\FileHelper"
        />
    </services>

</container>