{
    "env": {
        "node": true,
        "es6": true
    },
    "rules": {
        "no-throw-literal": 1,
        "strict": "never",
        "semi": [2, "never"],
        "quotes": "single",
        "no-var": 1,
        "eol-last": 1,
        "no-new-require": 1,
        "no-sync": 1,
        "no-mixed-requires": [1, false]
    },
    "globals": {
        "browser": true,
        "jquery": true
    }
}
